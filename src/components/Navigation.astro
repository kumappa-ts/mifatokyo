---
// @ts-nocheck
import { Image } from 'astro:assets';
import { getNavigationItems } from '../config/site.ts';
const navItems = getNavigationItems();
// import iconMail from '/public/icon_mail.svg';
// import iconHome from '/public/icon_home.svg';
// import iconMemo from '/public/icon_memo.svg';
// import iconAbout from '/public/icon_about.png';
// import iconKeyboard from '/public/icon_keyboard.svg';
---

<nav class="navigation">
  <!-- <Image src={logo} alt="mifa" class="navigation-logo" /> -->
  <ul class="navigation-list">
    {navItems.map(item => (
      <li class="navigation-list__item">
        <a class=`navigation-item navigation-item--${item.label}` href={item.href} data-text={item.jaLabel}>
          <p class="navigation-item__text">{item.label}</p>
        </a>
        {/* <a class="navigation-item" href={item.href}>{item.jaLabel} - {item.label}</a> */}
      </li>
    ))}
  </ul>
  <!-- ここにSNS入れる？ -->
</nav>

<style lang="scss">
  .navigation{
    // border: 4px solid $black;
    // border-radius: 1.2rem;
    // background: rgba($white, .8);
    // backdrop-filter: blur(10px);
    // padding:  3cqi;
    // height: 100%;
    // max-height: 720px;
    height: fit-content;
    @include mq {
      // border: 1px solid #dadada;
      // background: rgba($white, .5);
      position: absolute;
      inset: 0;
      margin: auto;
      bottom: 4rem;
      padding:  4rem;

    }
  }
  .navigation-logo{
    display: none;
    @include mq {
      display: flex;
      width: 18rem;

    }
  }
  .navigation-list{
    position: relative;
    display: grid;
    grid-template-columns: repeat(5,1fr);
    gap: 2cqi;
    list-style: none;
    @include mq {
      // border-left: 4px solid $black;
      padding-left: 1cqi;
      padding-top: 1cqi;
      padding-bottom: 1cqi;
      gap: 2.4rem;
      grid-template-columns: 1fr;

      width: fit-content;
    }
    @include mq {
      &:has(.navigation-list__item:hover) .navigation-list__item:not(.navigation-list__item:hover){
        .navigation-item__text{
          filter: opacity(.35);
        }
      }
    }
  }
  .navigation-list__item{
    text-align: center;
    position: relative;
    @include mq {
      text-align: left;
      &:before{
        content: '';
        background: $white;
        position: absolute;
        aspect-ratio: 1;
        height: 1rem;
        width: 1rem;
        left: -1cqi;
        position: absolute;
        top: 50%;
        translate:0 -50% ;
        scale: 0;
        border-radius: 50%;
        transition: all 0.3s easing('in-out-sine');
      }
    }
    @include hover{
      &:before{
        scale: 1;
      }
    }
  }
  .navigation-item--Home{
    &:before{
      background: url(/public/icon_home.svg) center center/contain no-repeat;
    }
  }
  .navigation-item--About{
    &:before{
      background: url(/public/favicon.svg) center center/contain no-repeat;
    }
  }
  .navigation-item--Works{
    &:before{
      background: url(/public/icon_keyboard.svg) center center/contain no-repeat;
    }
  }
  .navigation-item--memo{
    &:before{
      background: url(/public/icon_memo.svg) center center/contain no-repeat;
    }
  }
  .navigation-item--Contact{
    &:before{
      background: url(/public/icon_mail.svg) center center/contain no-repeat;
    }
  }
  .navigation-item{
    display: grid;
    gap: 1cqi;
    overflow: hidden;
    @include mq {
      // display: flex;
      gap: .5cqi;
      &:after{
        color: $white;
        // -webkit-text-stroke:0px $black;
        transition: all 0.3s easing('in-out-sine');
        content: '' attr(data-text);
        // filter: opacity(0);
        letter-spacing: .1em;
        translate: 0% 100%;
        display: block;
        font-size: 1.4rem;
        grid-column: 1/2;
        grid-row: 1/2;
      }
    }
    &:before{
      content: '';
      aspect-ratio: 1;
      display: block;
      width: 5cqi;
      margin: auto;
      @include mq {
        aspect-ratio: unset;
        position: absolute;
        bottom: 0;
        width: calc(100% + 1cqi);
        background: $black;
        height: 3px;
        left: -1cqi;
        transition: all 0.3s easing('in-out-sine');
        clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
      }
    }
    @include hover{
      &:after{

        translate: 0% 0%;
      }
      .navigation-item__text{
        translate: 0% -100%;
      }
      // &:before{
        //   clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
        // }
      }
    }
  .navigation-item__text{
    font-weight: 500;
    font-size: $size-smp10;
    letter-spacing: .05em;
    @include mq {
      grid-column: 1/2;
      grid-row: 1/2;
      color: $white;
      transition: all 0.3s easing('in-out-sine');
      font-size: 1.6rem;
      // -webkit-text-stroke:1px $black;
    }
  }

</style>
