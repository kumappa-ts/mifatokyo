
---
interface Props {
  href: string;
  text?: string;
}

const { href, text = "other More" } = Astro.props;
---

<a href={href} class="other-button">
  <span class="other-button__icon other-button__icon--in"></span>
  <span class="other-button__text">{text}</span>
  <span class="other-button__icon other-button__icon--out"></span>
</a>

<style lang="scss">
  @use '../../styles/_variables' as *;
  @use '../../styles/_mixins' as *;
  .other-button {
    width: 90cqi;
    display: grid;
    justify-content: center;
    // grid-template-columns: auto 1fr;
    align-items: center;
    gap: 2cqi;
    padding:  4cqi 3cqi 3cqi;
    border: var(--default-border);
    border-left: none;
    border-radius: 0 4rem 4rem 0;
    overflow: hidden;
    background: $white;
    transition: all 0.3s easing('in-out-sine');
    position: relative;
    text-align: left;
    // margin-top: 10cqi;
    @include hover{
      // background: #ddd;
      width: 100cqi;
      // filter: drop-shadow(0px 0px 2px $white);
      .other-button__icon--in{
        translate: 30% 0;
        scale: 1.2;
      }
      .other-button__icon--out{
        translate: 130% 0;
        scale: .4;
      }
      .other-button__text{
        letter-spacing: .1em;
        // translate: 2.8rem 0;
        // color: $white;

      }
    }
  }
  .other-button__text{
    font-size: $text28;
    font-weight: 900;
    line-height: 1;
    transition: all 0.3s easing('in-out-sine');
    -webkit-text-stroke: 1px $black;
    @include mq {
      -webkit-text-stroke: 2px $white;
      -webkit-text-stroke: 2px $black;

    }
  }
  .other-button__icon{
    position: relative;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.1rem;
    align-items: center;
    aspect-ratio: 1;
    border-radius: 50%;
    background: $black;
    width: 8cqi;
    transition: all 0.3s easing('in-out-sine');

    &:before,
    &:after{
      content: '';
      position: absolute;
      clip-path: polygon(0 0, 0% 100%, 100% 50%);
      aspect-ratio: 1 / 1.5;
      width: 30%;
      background: $white;;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
    }
    &:before{
      z-index: 2;
      left: 60%;
    }
    &:after{
      opacity: .75;
      left: 45%;
    }
  }
  .other-button__icon--out{
    position: absolute;
    right: 1cqi;
  }
  .other-button__icon--in{
    position: absolute;
    translate: -140% 0;
    scale: .4;
    // background: $white;
    // &:before,
    // &:after{
    //   background: $black;

    // }
  }

</style>
