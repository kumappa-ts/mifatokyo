---
import type { GetStaticPaths } from "astro";
import { Image } from 'astro:assets';
// import Layout from '../layouts/Layout.astro';
// import Breadcrumb from '../components/common/Breadcrumb.astro';
import PageHeader from '../components/common/PageHeader.astro';
import Page from '../components/common/page.astro';
import { generateMetadata } from '../config/site';

const metadata = generateMetadata('contact');
---
<Page>
  <div class="">
    <PageHeader >
  </div>
  <div class="contact-content border-block">
    <div class="page-lead">
      <p class="text">可能な限り早めにお返事しますので、
        お気軽にお声がけください。
        ※SNSからのお声がけも大歓迎です</p>

    </div>
    <form action="https://ssgform.com/s/tUGCWDZka3C5" method="post">
      <div class="g-recaptcha" data-sitekey="6LeYh_0qAAAAAHOgRd3MhYbasImu3V0p79DXITiN"></div>
      <div class="contact-wrap">
        <div class="contact-line text">
          <label class="contact-label text" for="name">お名前<span class="required-mark">※必ずご入力ください</span></label>
          <input type="text" name="お名前" required="required" id="name" placeholder="ここにお名前をお願いします。"/>
        </div>
        <div class="contact-line text">
          <label class="contact-label text" for="mail">ご返信先メールアドレス<span class="required-mark">※必ずご入力ください</span></label>
          <input type="email" name="メールアドレス" required="required" id="mail" placeholder="ここにメールアドレスをお願いします。"/>
        </div>
        <div class="contact-line text">
          <!-- textarea: 複数行 -->
          <label class="contact-label text" for="main-text">ご連絡の内容<span class="required-mark">※必ずご入力ください</span></label>
          <textarea name="お問い合わせ内容" id="main-text" required="required" placeholder="ここにご連絡の内容をご入力ください。"></textarea>
        </div>
      </div>
      <!-- submit: 送信ボタン -->
      <button type="submit" class="contact-button btn__md--effect" data-text="クリックすると送信されます。">
        <span class="button-text-line">
          <span class="button-text-line__item button-text-line__item--default text">以上で送ってよろしいですか？</span>
          <span class="button-text-line__item button-text-line__item--hover text">クリックすると送信されます。</span>
        </span>
        <!-- <span class="button-text-line button-text-line--complete text">送信しました！</span> -->
        <span class="contact-button-icon">
          <svg width="28" height="22" viewBox="0 0 28 22" fill="none">
            <path d="M0 8.98021L1.14368 9.79105L7.64624 14.402V21.5094L13.3011 18.4126L18.3608 22L28 0L0 8.98021ZM3.13502 9.45955L24.2166 2.69853L8.56455 13.3105L3.13502 9.45955ZM9.08917 19.1019V15.4249L12.0146 17.4996L9.08917 19.1019ZM17.7458 19.8213L9.44869 13.9378L24.9205 3.44732L17.7458 19.8213Z" fill="#030014"/>
          </svg>
        </span>
      </button>
    </form>
  </div>
</Page>
<style lang="scss">
  @use '../styles/_variables' as *;
  @use '../styles/_mixins' as *;
  .page-lead{
    // padding: 0 5cqi;
    margin-bottom: 8cqi;
  }
  .contact-content{
    padding: 10cqi 5cqi;
    background: rgba($white, .95);
  }
  .contact-wrap{
    display: grid;
    gap: 8cqi;
    margin-bottom: 8cqi;
  }
  .contact-line{
    display: grid;
    gap: 1cqi;
  }
  input,
  textarea {
    resize: vertical;
    padding: 1cqi 2cqi ;
    appearance: none;
    background: $white;
    border-radius: 1cqi;
    border: 4px solid $black;
    font-size: 1.6rem;
    &:focus {
      outline: 0;
      border-color: #777;
    }
    &::placeholder{
      opacity: .5;
      font-size: 1.2rem;
    }
  }
  .contact-label{
    display: flex;
    align-items: center;
    gap: 2cqi;
    font-weight: 500;
  }
  .required-mark{
    color: red;
    font-size: .75em;
    font-weight: 600;
  }
  .contact-button{
    position: relative;
    overflow: hidden;
    display: grid;
    border-radius: 1cqi;
    background: $white;
    border: 2px solid $black;
    margin: auto;
    @include hover{
      .button-text-line__item--default{
        translate: 0 -100%;
      }
      .button-text-line__item--hover{
        translate: 0 0;
      }
      .contact-button-icon{
        translate: 0 0 ;
      }
    }
  }
  .button-text-line{
    line-height: 1;
    position: relative;
    display: grid;
    overflow: hidden;
  }
  .button-text-line__item{
    transition: all 0.3s easing('in-out-sine');
    padding: 3cqi 10cqi 3cqi 2cqi;
    grid-column: 1/2;
    grid-row: 1/2;
    width: 100%;
    height: 100%;
    z-index: 1;
    display: flex;
    color: $black;
  }

  .button-text-line__item--default{
    z-index: 1;
    translate: 0 -100%;
    @include mq {
      translate: 0 0%;

    }
  }
  .button-text-line__item--hover{
    z-index: 2;
    translate: 0 0%;
    @include mq {
      translate: 0 100%;

    }
  }
  // .button-text-line--complete{
    //   z-index: 3;
    // }
  .contact-button-icon{
    position: absolute;
    aspect-ratio: 28/22;
    top: 2cqi;
    right: 2.5cqi;
    svg{
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    @include mq {
      transition: all 0.3s easing('in-out-sine');
      translate: -150% 150%;
    }
  }

</style>
